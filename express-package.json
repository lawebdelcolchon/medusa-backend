{
  "name": "express-ecommerce-api",
  "version": "1.0.0",
  "description": "Complete e-commerce API built with Express.js - Migrated from Medusa.js",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "migrate": "tsx src/database/migrate.ts",
    "seed": "tsx src/scripts/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "health": "curl -f http://localhost:$PORT/health || exit 1"
  },
  "keywords": [
    "express",
    "ecommerce",
    "api",
    "typescript",
    "postgresql",
    "supabase",
    "rest",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.29.1",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "slugify": "^1.6.6",
    "stripe": "^14.9.0",
    "nodemailer": "^6.9.7",
    "rate-limiter-flexible": "^4.0.1",
    "winston": "^3.11.0",
    "@types/express": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "drizzle-kit": "^0.20.6",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=20"
  }
}
