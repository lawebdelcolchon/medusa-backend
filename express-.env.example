# Server Configuration
NODE_ENV=development
PORT=9000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/express_ecommerce
DB_HOST=localhost
DB_PORT=5432
DB_NAME=express_ecommerce
DB_USER=username
DB_PASSWORD=password

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
COOKIE_SECRET=your-super-secret-cookie-key-here
BCRYPT_ROUNDS=12

# CORS Configuration
STORE_CORS=http://localhost:3000,http://localhost:8000
ADMIN_CORS=http://localhost:3001,http://localhost:5173,http://localhost:9000
AUTH_CORS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourstore.com

# Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# External Services
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
